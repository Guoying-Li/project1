{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


 

 <a href="{{path('app_event')}}" class="btn btn-success">Ajouter</a>
<table class="table">
  <thead>
  
    <tr>
      <th scope="col">#</th>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Date</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
{% for e in events %}
    <tr>
        <th scope="row"</th>
        <td>{{ e.Id }}</td>
        <td>{{ e.Title }}</td>
        <td>{{ e.Date | date('d-m-y') }}</td>
        <td>
            <a href="{{path('event_edit', {id: e.id})}}" class="btn btn-warning">Modifier</a>
             <a  href="{{path('event_delete', {id: e.id})}}" class="btn btn-danger">Supprimer</a></td> 
    </tr>
{% endfor %}

  </tbody>
</table>
</div>
{% endblock %}
