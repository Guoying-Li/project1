{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<h1>Mon tableau de bord</h1>

<div class="row">
    <div class="col-10">
        <h2>Mes derniers évènements</h2>
    </div>
    <div class="col-12">

        <div class="row">

            {% for e in 1..last_events %}
            <div class="card col-4 m-1" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Titre de l'event</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Lieu</h6>
                    <p class="card-text">Description de mon évènement</p>
                    <a href="#" class="card-link">Détails</a>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
</div>

<div class="row">
    <div class="col-10">
        <h2>Mes dernières photos</h2>
    </div>
    <div class="col-2">
        
    </div>
    
    <div class="col-12 mt-1">

        <div class="row">

            {% for p in 1..last_pictures %}
            <div class="card col-4 m-1" style="width: 18rem;">
                
                <img src="https://picsum.photos/seed/picture{{ p }}/200/100/" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Titre de l'event</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Lieu</h6>
                    <p class="card-text">Date</p>
                    <a href="#" class="card-link">Détails</a>
                </div>
            </div>
            {% endfor %}

        </div>
        
    </div>
    <div class="col-12 mt-1">


    </div>
</div>

{% endblock %}